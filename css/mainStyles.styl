body
  font-size 11px
  font-family: 'Open Sans', sans-serif;

.homeAppContainer
  height 100vh
  width 100vw
  overflow hidden
  padding 0
  margin 0

.bodySection
  height 100vh
  width 100vw
  overflow hidden
  background-image -moz-background-image url("../imgs/fondo.jpg")
  background-image -webkit-background-image url("../imgs/fondo.jpg")
  background-image -webkit-background url("../imgs/fondo.jpg")
  background-image -o-background-image url("../imgs/fondo.jpg")
  background-image -ms-background url("../imgs/fondo.jpg")
  background-image url("../imgs/fondo.jpg")
  position relative
  background-position center center
  background-repeat no-repeat
  -webkit-background-size cover
  background-size cover
  font-size 1em
  display flex
  align-content center
  & > div
    align-self center
    margin 0 auto
    color white
    background rgba(0,0,0,.5)
    height 50vh
    text-align center
    & > figure
      height 50%
      & > img
        height 100%
        width auto
        display block
        margin 2em auto
    & > span
      font-family: 'Chewy', cursive;
      color white
      font-size 3em
      letter-spacing .2em
    & > ul 
      width 100%
      display table
      padding 0
      margin-top 2em
      & > li
        height 2.5em
        display table-cell
        font-size 1.3em
        -webkit-transition all 300ms ease-out
        -moz-transition all 300ms ease-out
        -o-transition all 300ms ease-out
        transition all 300ms ease-out
        border-bottom 2px solid transparent
        &:hover
          background rgba(255,255,255,.1)
          border-bottom 2px solid white
        a 
          color white
          line-height 2.5em
          vertical-align middle
          text-decoration none

.menuNav
  width 100%
  height 3em
  font-size 1em
  display flex
  position fixed
  & > nav
    width 100%
    background rgba(0,0,0,.3)
    & > ul
      width 100%
      margin 0
      padding 0
      & > li
        list-style none
        float right
        width 10%
        height 3em
        -webkit-transition all 300ms ease-out
        -moz-transition all 300ms ease-out
        -o-transition all 300ms ease-out
        transition all 300ms ease-out
        text-align center
        &:hover
          background rgba(255,255,255,.1)
        & > a
          font-size 1.5em
          color white
          line-height 2em
          text-decoration none
      #homeId
        float left !important
        margin-left 1em
        font-weight bold




@media screen and (min-width: 1700px)
  .titleFirts
    font-size 5em !important

