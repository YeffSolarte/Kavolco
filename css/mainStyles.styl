body
  font-size 11px
  font-family: 'Open Sans', sans-serif;
  min-height 577

.homeAppContainer
  width 100%
  padding 0
  margin 0
  overflow hidden
  footer
    width 100%
    position relative
    height 10vh
    background #193441

.bodySection
  height 100vh
  width 100vw
  overflow hidden
  background-image -moz-background-image url("../imgs/fondo-min.jpg")
  background-image -webkit-background-image url("../imgs/fondo-min.jpg")
  background-image -webkit-background url("../imgs/fondo-min.jpg")
  background-image -o-background-image url("../imgs/fondo-min.jpg")
  background-image -ms-background url("../imgs/fondo-min.jpg")
  background-image url("../imgs/fondo-min.jpg")
  //-webkit-background url("../imgs/fondo-min.jpg")
  position relative
  background-position center center
  background-repeat no-repeat
  -webkit-background-size cover
  background-size cover
  font-size 1em
  display flex
  display -webkit-box      /* OLD - iOS 6-, Safari 3.1-6 */
  display -moz-box         /* OLD - Firefox 19- (buggy but mostly works) */
  display -ms-flexbox      /* TWEENER - IE 10 */
  display -webkit-flex     /* NEW - Chrome */
  display flex
  align-content center
  & > div
    align-self center
    -webkit-align-self center
    -moz-box-align center
    margin 0 auto
    color white
    background rgba(0,0,0,.5)
    position relative
    height 50vh
    text-align center
    border-radius 7px
    -webkit-transition all 300ms ease-out
    -moz-transition all 300ms ease-out
    -o-transition all 300ms ease-out
    transition all 300ms ease-out
    & > figure
      height 50%
      & > img
        height 100%
        width auto
        display block
        margin 2em auto
    & > div
      margin-top 2em
      & > span
        font-family: 'Chewy', cursive;
        color white
        font-size 3em
        letter-spacing .2em
    & > ul 
      width 100%
      position absolute
      bottom 0
      left 0
      right 0
      display block
      padding 0
      margin-top 2em
      & > li
        height 2.5em
        display inline-block
        font-size 1.3em
        -webkit-transition all 300ms ease-out
        -moz-transition all 300ms ease-out
        -o-transition all 300ms ease-out
        transition all 300ms ease-out
        border-bottom 2px solid transparent
        &:hover
          background rgba(255,255,255,.1)
          border-bottom 2px solid white
        a 
          color white
          line-height 2.5em
          vertical-align middle
          text-decoration none

.menuNav
  width 100%
  height 5em
  font-size 1em
  position fixed
  z-index 1
  top 0
  & > nav
    width 100%
    background rgba(255, 255, 255, 0.7)
    & > ul
      width 100%
      margin 0
      padding 0
      & > li
        list-style none
        float right
        width 10%
        height 5em
        -webkit-transition all 300ms ease-out
        -moz-transition all 300ms ease-out
        -o-transition all 300ms ease-out
        transition all 300ms ease-out
        text-align center
        border-bottom 2px solid transparent
        &:hover
          background rgba(255,255,255,.8)
          border-bottom 2px solid #193441
        & > a
          font-size 1.4em
          color initial
          text-decoration none
          line-height 3.5em
      #homeId
        float left !important
        margin-left 3em
        font-weight bold
        font-family: 'Chewy', cursive;
        letter-spacing .2em
        width 12%
        & > a
          font-size 3em
          line-height 1.8em !important
        &:hover
          background initial !important
          border-bottom 2px solid #193441
          text-shadow: 0 3px 20px rgba(140, 140, 140, 1);

.aboutUsContainer
  width 100%

.aboutUsFigure
  width 80vw
  height 60vh
  margin 1% auto 2% auto
  overflow hidden
  border-radius 10px
  background-image -moz-background-image url("../imgs/aboutUs1.jpg")
  background-image -webkit-background-image url("../imgs/aboutUs1.jpg")
  background-image -webkit-background url("../imgs/aboutUs1.jpg")
  background-image -o-background-image url("../imgs/aboutUs1.jpg")
  background-image -ms-background url("../imgs/aboutUs1.jpg")
  background-image url("../imgs/aboutUs1.jpg")
  position relative
  background-position center center
  background-repeat no-repeat
  -webkit-background-size cover
  background-size cover

.titlePage
  width 100%
  text-align center
  margin 5em auto 0 auto
  .titleFirts
    font-size 3em
    font-weight bold
    border-bottom 2px solid #193441

.textContainer
  width 82%
  margin 1% auto 1% auto
  text-align center
  padding 0
  position relative
  display flex
  flex-wrap wrap
  .textInfo, .textContainer-mini
    text-align justify
    font-size 1.5em
  .imageInfo
    height 100%
    position absolute
    right 0
    top 0
    & > figure
      width 100%
      height 100%
      display flex
      & > img
        align-self center
        width 100%
        height auto
        display block
        margin 0 auto
        border-radius 10px

.textContainer-mini
  margin 0 auto
  & > figure
    width 100%
    margin-bottom 5%
    & > img
      width auto
      height 15em
      display block
      margin 0 auto
    .imgRadio
      border-radius 50%
      //border-radius 50%

.margin5pTop
  margin-top 2%

.titleP
  width 100%
  text-align center
  margin-bottom 1em
  & > span
    font-size 1.2em
    font-weight bold

.servicesContainer
  width 100%
  & > div
    width 100%
    position relative
    display inline-block
    & > span
      font-size 1.5em
    & > div
      figure
        width 100%
        height 10em
        & > img
          width auto
          height 100%

@media screen and (min-width:1500px)
  .textContainer
    .imageInfo
      & > figure
        & > img
          width auto !important
          height 100% !important

@media screen and (max-width:767px)
  .imageInfo
    display none


@media screen and (max-width:767px) and (max-height:768px)
  //body
  //  font-size 14px !important
  .bodySection
    & > div
      height 75vh
      & > figure
        height 40%

