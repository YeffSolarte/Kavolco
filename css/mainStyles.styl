body
  font-size 11px
  font-family: 'Open Sans', sans-serif;
  min-height 320px
  min-width 320px

.homeAppContainer
  width 100%
  padding 0
  margin 0
  overflow hidden
  footer
    width 100%
    position relative
    height 10vh
    background #193441

.bodySection
  height 100vh
  width 100vw
  min-height 320px
  min-width 320px
  overflow hidden
  background-image -moz-background-image url("../imgs/fondo-min.jpg")
  background-image -webkit-background-image url("../imgs/fondo-min.jpg")
  background-image -webkit-background url("../imgs/fondo-min.jpg")
  background-image -o-background-image url("../imgs/fondo-min.jpg")
  background-image -ms-background url("../imgs/fondo-min.jpg")
  background-image url("../imgs/fondo-min.jpg")
  //-webkit-background url("../imgs/fondo-min.jpg")
  position relative
  background-position center center
  background-repeat no-repeat
  -webkit-background-size cover
  background-size cover
  font-size 1em
  display flex
  display -webkit-box      /* OLD - iOS 6-, Safari 3.1-6 */
  display -moz-box         /* OLD - Firefox 19- (buggy but mostly works) */
  display -ms-flexbox      /* TWEENER - IE 10 */
  display -webkit-flex     /* NEW - Chrome */
  display flex
  align-content center
  & > div
    align-self center
    -webkit-align-self center
    -moz-box-align center
    margin 0 auto
    color white
    background rgba(0,0,0,.5)
    position relative
    //height 50vh
    height 75vh
    min-height 320px
    text-align center
    border-radius 7px
    -webkit-transition all 300ms ease-out
    -moz-transition all 300ms ease-out
    -o-transition all 300ms ease-out
    transition all 300ms ease-out
    & > figure
      height 35%
      & > img
        height 100%
        max-width 300px
        max-height 100%
        width auto
        display block
        margin 2em auto
    & > div
      margin-top 2em
      & > span
        font-family: 'Chewy', cursive;
        color white
        font-size 3em
        letter-spacing .2em
    & > ul 
      width 100%
      position absolute
      bottom 0
      left 0
      right 0
      display block
      padding 0
      & > li
        width 100%
        margin .2em 0
        display inline-block
        font-size 1.3em
        -webkit-transition all 300ms ease-out
        -moz-transition all 300ms ease-out
        -o-transition all 300ms ease-out
        transition all 300ms ease-out
        border-bottom 2px solid transparent
        &:hover
          background rgba(255,255,255,.1)
          border-bottom 2px solid white
        a 
          color white
          padding .5em 3em
          line-height 2.5em
          vertical-align middle
          text-decoration none

.menuNav
  width 100%
  height 5em
  font-size 1em
  position fixed
  z-index 1
  top 0
  & > nav
    width 100%
    background rgba(255, 255, 255, 0.7)
    & > ul
      width 100%
      margin 0
      padding 0
      & > li
        list-style none
        float right
        display none
        line-height 5em
        height 5em
        padding 0 2em
        -webkit-transition all 300ms ease-out
        -moz-transition all 300ms ease-out
        -o-transition all 300ms ease-out
        transition all 300ms ease-out
        text-align center
        border-bottom 2px solid transparent
        &:hover
          background rgba(255,255,255,.8)
          border-bottom 2px solid #193441
        & > a
          font-size 1.4em
          color black
          text-decoration none
      #homeId
        float left !important
        //margin-left 3em
        display block
        font-weight bold
        font-family: 'Chewy', cursive;
        letter-spacing .2em
        & > a
          font-size 2.7em
        &:hover
          background initial !important
          border-bottom 2px solid #193441
          text-shadow 0 3px 20px rgba(140, 140, 140, 1)
      #buttonNav
        float right
        display block
        & > button
          background transparent
          color grey
          border none
          font-size 2em
          &:focus, &:active
            outline thin none
            outline-offset 0
          &:hover
            color #193441
            -webkit-transition all 300ms ease-out
            -moz-transition all 300ms ease-out
            -o-transition all 300ms ease-out
            transition all 300ms ease-out
        &:hover
          background transparent
          color #193441
          border-bottom 2px solid transparent

        .buttonReverse
          transform rotate(-90deg)
          -webkit-transform rotate(-90deg)
          -moz-transform rotate(-90deg)
          -o-transform rotate(-90deg)
          -ms-transform rotate(-90deg)
    .navHidden
      -webkit-transition all 500ms ease-out
      -moz-transition all 500ms ease-out
      -o-transition all 500ms ease-out
      transition all 500ms ease-out
      & > ul
        width 100%
        padding 0
        & > li
          width 93%
          margin 0 auto
          list-style none
          height 4em
          line-height 4em
          border-bottom 1px solid gainsboro
          &:hover
            background rgba(255,255,255,.8)
            border-bottom 2px solid #193441
          &:first-child
            border-top 1px solid gainsboro
          & > a
            color black
            padding-left 1.7em
            font-weight bold
            display block
            text-decoration none
            font-size 1.3em


.aboutUsContainer
  width 100%

.aboutUsFigure
  height 50vh
  margin 1em auto 2em auto
  float initial
  overflow hidden
  border-radius 3px
  background-image -moz-background-image url("../imgs/aboutUs1-min.jpg")
  background-image -webkit-background-image url("../imgs/aboutUs1-min.jpg")
  background-image -webkit-background url("../imgs/aboutUs1-min.jpg")
  background-image -o-background-image url("../imgs/aboutUs1-min.jpg")
  background-image -ms-background url("../imgs/aboutUs1-min.jpg")
  background-image url("../imgs/aboutUs1-min.jpg")
  position relative
  background-position center center
  background-repeat no-repeat
  -webkit-background-size cover
  background-size cover

.titlePage
  width 100%
  text-align center
  margin 7em auto 0 auto
  .titleFirts
    font-size 2 em
    font-weight bold
    border-bottom 2px solid #193441

.textContainer
  width 82%
  margin 1% auto 1% auto
  text-align center
  padding 0
  position relative
  display flex
  flex-wrap wrap
  .textInfo, .textContainer-mini
    text-align justify
    font-size 1.2em
  .imageInfo
    height 100%
    position absolute
    right 0
    top 0
    & > figure
      width 100%
      height 100%
      //display flex
      display none
      & > img
        align-self center
        width 100%
        height auto
        display block
        margin 0 auto
        border-radius 10px

.textContainer-mini
  margin 0 auto
  & > figure
    width 100%
    margin-bottom 5%
    & > img
      width auto
      height 15em
      display block
      margin 0 auto
    .imgRadio
      border-radius 50%
      //border-radius 50%

.margin5pTop
  margin-top 2%

.titleP
  width 100%
  text-align center
  margin-bottom 1em
  & > span
    font-size 1.2em
    font-weight bold

.servicesContainer
  width 100%
  & > div
    width 100%
    position relative
    display inline-block
    & > span
      font-size 1.5em
    & > div
      figure
        width 100%
        height 10em
        & > img
          width auto
          height 100%


@media only screen and (min-width:500px) and (orientation: landscape)
  .bodySection
    & > div
      height 50vh
      & > figure
        height 35%
        & > img
          margin 1em auto 0 auto
      & > ul
        & > li
          width initial
          font-size 1em

@media only screen and (min-width:650px)
  .bodySection
    & > div
      height 50vh
      & > figure
        height 35%
        & > img
          margin 1em auto 0 auto
      & > ul
        & > li
          width initial
          font-size 1.3em

@media only screen and (min-width:980px)
  .bodySection
    & > div
      & > figure
        & > img
          margin 2em auto
      & > div
        & > span
          font-size 4em
      & > ul
        & > li
          & > a
            padding 0.5em 2em

@media only screen and (min-width:1600px)
  .bodySection
    & > div
      & > figure
        height 45%
        & > img
          margin 2em auto
      & > div
        & > span
          font-size 4.5em
      & > ul
        & > li
          font-size 1.5em
          & > a
            padding 0.5em 3em