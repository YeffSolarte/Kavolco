body
  font-size 11px
  font-family: 'Open Sans', sans-serif;
.bodySection
  height 100vh
  width 100vw
  overflow hidden
  background-image -moz-background-image url("../imgs/fondo.jpg")
  background-image -webkit-background-image url("../imgs/fondo.jpg")
  background-image -webkit-background url("../imgs/fondo.jpg")
  background-image -o-background-image url("../imgs/fondo.jpg")
  background-image -ms-background url("../imgs/fondo.jpg")
  background-image url("../imgs/fondo.jpg")
  position relative
  background-position center center
  background-repeat no-repeat
  -webkit-background-size cover
  background-size cover
  font-size 1em
  display flex
  align-content center
  & > div
    align-self center
    margin 0 auto
    color white
    background rgba(0,0,0,.5)
    height 50vh
    text-align center
    & > figure
      height 50%
      & > img
        height 100%
        width auto
        display block
        margin 2em auto
    & > span
      font-family: 'Chewy', cursive;
      color white
      font-size 3em
      letter-spacing 1px


@media screen and (min-width: 1700px)
  .titleFirts
    font-size 5em !important

